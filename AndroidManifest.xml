                <action android:name="com.happenstance.taleport.SeeBookmarks" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happenstance.taleport.BookmarkView"
            android:label="@string/app_name"
            android:parentActivityName="com.happenstance.taleport.SeeBookmarks"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.happenstance.taleport.BookmarkView" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happenstance.taleport.Bookmark"
            android:label="Bookmark"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <intent-filter>
                <action android:name="com.happenstance.taleport.Bookmark" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happenstance.taleport.About"
            android:label="About"
            android:parentActivityName="com.happenstance.taleport.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.happenstance.taleport.About" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happenstance.taleport.Version"
