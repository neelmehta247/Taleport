            android:name="com.google.android.gms.version" />

        <activity
            android:name="com.happenstance.taleport.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.happenstance.taleport.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happenstance.taleport.SeeBookmarks"
            android:label="@string/app_name"
            android:parentActivityName="com.happenstance.taleport.MainActivity"
            android:screenOrientation="portrait" >
